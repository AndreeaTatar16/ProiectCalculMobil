<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getJSONbtn"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#CC2C24"
            android:onClick="onClickGetData"
            android:text="Daily Workout Tip" />

        <TextView
            android:id="@+id/dailyTipTV"
            android:layout_width="198dp"
            android:layout_height="71dp"
            android:layout_marginLeft="15dp"
            android:text="Daily dose of fitness tips :)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tenor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="150dp">

        <TextView
            android:id="@+id/stepsTV"
            android:layout_width="91dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:hint="0"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Steps"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif-condensed"
            android:paddingStart="20dp"
            android:text="Steps"
            android:textColor="#B3B1B1"
            android:textSize="15dp" />

                <pl.droidsonroids.gif.GifImageView
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:src="@drawable/stepp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/distanceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:hint="0"
                        android:paddingTop="10dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Km"
                        android:layout_width="44dp"
                        android:layout_height="43dp"

                        android:layout_marginTop="8dp"

                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingStart="1dp"
                        android:paddingTop="10dp"
                        android:text="km"
                        android:textColor="#B3B1B1"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/distanceDone"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"

                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingTop="2dp"
                    android:text="Distance travelled"
                    android:textColor="#B3B1B1"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="73dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginLeft="40dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:src="@drawable/l3" />-->


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/caloriesTV"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:hint="0"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingStart="3dp"
                        android:paddingTop="8dp"
                        android:text="kcal"
                        android:textColor="#B3B1B1"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/calorieDone"
                    android:layout_width="69dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Calories burnt"
                    android:textColor="#B3B1B1"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#212940"
            android:text="Reset" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"

            android:layout_marginStart="94dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/train" />

        <Button
            android:id="@+id/btnTrain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="56dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="#4A890F"
            android:onClick="intentEvent"
            android:text="train"
            android:textSize="25sp" />

    </RelativeLayout>


</LinearLayout>